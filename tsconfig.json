{
  "extends": "@tsconfig/node16",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "rootDir": "./src",
		"outDir": "./dist"
  },
  "compileOnSave": true
}
